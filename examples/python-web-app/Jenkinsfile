pipeline {
    agent any

    stages {
        stage('Checkout Code') {
            steps {
                git 'https://github.com/Sumit19D/Docker-Zero-to-Hero.git'
            }
        }

        stage('Build Docker Image') {
            steps {
                sh 'docker build -t sumitdorugade/cicd-app:latest .'
            }
        }

        stage('Push Docker Image') {
            steps {
                withCredentials([usernamePassword(
                    credentialsId: 'dockerhub-creds',
                    usernameVariable: 'sumitdorugade',
                    passwordVariable: 'RAnsandy#2025'
                )]) {
                    sh '''
                    echo $PASS | docker login -u $USER --password-stdin
                    docker push sumitdorugade/cicd-app:latest
                    '''
                }
            }
        }

        stage('Deploy to Kubernetes') {
            steps {
                sh '''
                kubectl apply -f deployment.yaml
                kubectl apply -f service.yaml
                '''
            }
        }
    }
}
